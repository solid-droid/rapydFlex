{
    "manifest_version": 2,
    "name" : "Rapyd Flex",
    "version" : "0.1.0",
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js":["script.js"],
            "css": ["styles.css"]
        }
